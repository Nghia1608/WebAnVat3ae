                <a id="btn-select1"href="" class="btnDelete btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModalDelete">Xóa vĩnh viễn</a>

            </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="4"class="text-center">
                <h3>
                Bạn chưa xóa sản phẩm nào !
                </h3>


              </td>
            </tr>
            {{/each}}

        </tbody>

    </table>
    <a href="/products/storedProducts">Quay về</a>

