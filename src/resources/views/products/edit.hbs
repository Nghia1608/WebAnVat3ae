	<script>

		document.getElementById("btn-restore").onclick = function(){
				var logoutForm = document.forms['formTong'];
				var tempID = document.getElementById('idSP').value

				logoutForm.action = '/products/'+tempID+'?_method=PUT';
				logoutForm.submit();
		}

		document.getElementById("logout").onclick = function(){
				sessionStorage.removeItem("username");
				var logoutForm = document.forms['formTong'];

				logoutForm.action = '/auth/logout?_method=POST';
				logoutForm.submit();
		}
	</script>
